<section class="content">
  <h1>All the recipes for this week</h1>

  <h2>Lunch</h2>
  <div class="main-content-container">
    {{#each data}}
      {{#if_equal ProductCategory "Lunch"}}
        <div class="main-product-card">
          <a href="/api/products/product_description/{{_id}}">

            <img src="/images/{{filename}}" alt="Product Image" />
            <div class="main-product-description">
              <div class="main-product-details">
                <h4>{{ProductName}}</h4>
                <p>
                  {{ProductDesc}}
                </p>
              </div>

              <div class="main-product-links">
                <div class="main-product-price">{{ProductPrice}}</div>

                <form
                  action="/api/cart/add-item-to-cart/{{this._id}}"
                  method="post"
                >
                  <button type="submit">Add To Cart</button>
                </form>
              </div>
            </div>
          </a>

        </div>
      {{/if_equal}}
    {{/each}}
  </div>

