<div class="checkout">
  <h1>Checkout</h1>
  <h4>Your Total: ${{total}}</h4>
  <form action="/api/products/checkout" method="post" id="checkout-form">
    <div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" class="form-control" />

      </div>
    </div>
    <div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" id="address" class="form-control" name="address" />
      </div>
    </div>
    <div>
      <div class="form-group">
        <label for="card-name">Card Holder Name</label>
        <input
          type="text"
          id="card-name"
          class="form-control"
          name="card-name"
        />
      </div>
    </div>
    <div>
      <div class="form-group">
        <label for="card-number">Credit Card Number</label>
        <input
          type="number"
          class="form-control"
          name="card-number"
          id="card-number"
        />
      </div>
    </div>
    <div>
      <div class="form-group">
        <label for="cvc">Credit Card Number</label>
        <input type="number" class="form-control" name="cvc" id="cvc" />
      </div>
    </div>
    <div>
      <div class="form-group">
        <label for="exp-month">Expiring Month</label>
        <input
          type="number"
          class="form-control"
          name="exp-month"
          id="exp-month"
        />
      </div>
      <div class="form-group">
        <label for="exp-year">Expiring Year</label>
        <input
          type="number"
          class="form-control"
          name="exp-year"
          id="exp-year"
        />
      </div>
    </div>
    <div>
      <div class="form-group">
        <button class="button" type="submit">Checkout</button>
      </div>
    </div>
  </form>
</div>

<script type="text/javascript" src="https://js.stripe.com/v3/"></script>