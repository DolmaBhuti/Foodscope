<div class="form-container" id="login-form">

  <form action="/login" method="post">
    <h2 class="form-title">LOG IN</h2>

    <div class="user-details">
      {{#if errMessage.invalid}}
        <span class="form-error-msg">{{errMessage.invalid}}</span>
      {{/if}}<br />

      <div class="input-box">
        {{#if errMessage.email}}
          <span class="form-error-msg">{{errMessage.email}}</span>
        {{/if}}<br />
        <label class="details" for="email">Email</label>
        <input
          type="email"
          placeholder="Enter your email"
          id="email"
          name="email"
          value="{{values.email}}"
          required
        />
      </div>
      <div class="input-box">
        {{#if errMessage.password}}
          <span class="form-error-msg">{{errMessage.password}}</span>
        {{/if}}<br />
        <label class="details" for="password">Password</label>

        <input
          type="password"
          name="password"
          id="password"
          class="error"
          value="{{values.password}}"
        />
      </div>
      <div class="button">
        <button type="submit">Log In</button>
      </div>

    </div>
  </form>
</div>

